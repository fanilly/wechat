.header {
  height: 100rpx;
  padding: 0 15rpx;
  width: 100%;
  display: flex;
  background-color: #fff;
  box-sizing: border-box;
}

.header text {
  display: block;
  flex: 1;
  text-align: center;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 30rpx;
  color: #353535;
  border-bottom: 2rpx solid transparent;
}

.header text.active {
  color: #ff5400;
  border-color: #ff5400;
}

.order-list {
  width: 100%;
}

.order-list-item {
  background: #fff;
  margin-top: 20rpx;
  color: #353535;
}

.order-list-item .item-header {
  height: 80rpx;
  padding: 0 15rpx;
}

.order-list-item .item-header text {
  display: inline-block;
  line-height: 80rpx;
  font-size: 24rpx;
}

.order-list-item .item-header text:first-child {
  width: 420rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
}

.order-list-item .item-header text:last-child {
  float: right;
}

.order-list-item .item-main {
  background: #fafafa;
  padding: 15rpx;
  display: flex;
  height: 140rpx;
}

.order-list-item .item-main .lside {
  width: 180rpx;
}

.order-list-item .item-main .lside image {
  width: 180rpx;
  height: 140rpx;
}

.order-list-item .item-main .rside {
  padding-left: 15rpx;
  flex: 1;
}

.order-list-item .item-main .pro-title {
  color: #353535;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.order-list-item .item-main .pro-title text:first-child {
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-list-item .item-main .pro-title text {
  display: inline-block;
}

.order-list-item .item-main .pro-title text:last-child {
  float: right;
}

.order-list-item .item-main .address-box {
  display: flex;
}

.address-box .address {
  color: #888;
  font-size: 24rpx;
  flex: 1;
}

.address-box .address text {
  line-height: 40rpx;
}

.address-box .address view {
  font-size: 24rpx;
}

.address-box .amound {
  width: 160rpx;
  text-align: right;
}

.address-box .amound text {
  display: block;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.order-list-item .item-footer {
  height: 60rpx;
  padding: 25rpx 15rpx;
}

.order-list-item .item-footer text {
  display: block;
  width: 148rpx;
  height: 58rpx;
  text-align: center;
  font-size: 24rpx;
  float: right;
  line-height: 58rpx;
  border: 1rpx solid #888;
  border-radius: 30rpx;
  margin-left: 24rpx;
  color: #888;
}

.order-list-item .item-footer text:first-child {
  color: #ff5400;
  border-color: #ff5400;
}

.order-list-item .item-footer text.evaluate {
  color: #ff5400;
  border-color: #ff5400;
}

.order-list-item .item-footer text.evaluated {
  color: #888;
  border-color: #888;
}

.pop {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .6);
  z-index: 50;
}

.pop .content {
  width: 90%;
  height: 200rpx;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  background-color: #fff;
  border-radius: 4rpx;
  box-shadow: 0 0 6rpx #333;
  padding-top: 30rpx;
  overflow: hidden;
}

.choose-num {
  height: 90rpx;
  display: flex;
  padding: 0 15rpx;
}

.choose-num view:first-child {
  width: 180rpx;
}

.choose-num view:first-child text {
  display: block;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #353535;
}

.choose-num view:last-child {
  flex: 1;
  text-align: right;
  height: 60rpx;
  padding: 15rpx 0;
}

.choose-num view:last-child text {
  display: inline-block;
  width: 63rpx;
  height: 60rpx;
  background-color: #efeff4;
  color: #666;
  text-align: center;
  line-height: 60rpx;
  font-size: 40rpx;
  vertical-align: top;
}

.choose-num view:last-child text:first-child {
  border-top-left-radius: 4rpx;
  border-bottom-left-radius: 4rpx;
}

.choose-num view:last-child text:nth-child(2) {
  width: 82rpx;
  background-color: rgba(0, 0, 0, 0);
  font-size: 26rpx;
}

.choose-num view:last-child text:last-child {
  border-top-right-radius: 4rpx;
  border-bottom-right-radius: 4rpx;
}

.pop-footer {
  display: flex;
  height: 80rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
}

.pop-footer text {
  display: block;
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.pop-footer text:first-child {
  background-color: #efeff4;
}

.pop-footer text:last-child {
  background-color: #02c1c9;
  color: #fff;
}

.useStatus {
  font-size: 24rpx;
  color: #888;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  height: 24rpx;
  width: 240rpx;
  text-align: center;
}